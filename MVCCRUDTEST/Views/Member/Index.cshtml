@model MVCCRUDTEST.Models.MemberIndexViewModel
@{
    ViewBag.Title = "會員清單";
}

<style>

    .ButtonContainer{
        text-align:right;
    }


    .MemberTable{
        width:100%;
    }
    .MemberTable th{
        background-color:#000;
        color:#FFF;

    }
    .MemberTable td{
        line-height:24px;
    }
</style>

<h2>會員清單</h2>
<div class="ButtonContainer">
     <a href="@Url.Action("Edit")">新增</a>
</div>
<hr />
<table class="MemberTable">
    <tr>
        <th>功能</th>
        <th>@Html.DisplayNameFor(model => model.DataList[0].Account)</th>
        <th>@Html.DisplayNameFor(model => model.DataList[0].Name)</th>
        <th>@Html.DisplayNameFor(model => model.DataList[0].Sex)</th>
        <th>@Html.DisplayNameFor(model => model.DataList[0].Phone)</th>
    </tr>
    @foreach(var item in Model.DataList)
    {
        <tr>
            <td>
                <a href="@Url.Action("Edit", new { Id = item.Id })">編輯</a>
                <a href="@Url.Action("Delete", new { Id = item.Id })">刪除</a>
            </td>
            <td>@Html.DisplayFor(model => item.Account)</td>
            <td>@Html.DisplayFor(model => item.Name)</td>
            <td>@Html.Raw(item.Sex.Trim() == "Male" ? "男":"女")</td>
            <td>@Html.DisplayFor(model => item.Phone)</td>
        </tr>
    }
</table>
